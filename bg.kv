<RoundedInput>
    line_color_normal: 144/255, 149/255, 251/255, 0
    line_color_focus: 144/255, 149/255, 251/255, 1
    hint_text_color_normal: (148/255, 147/255, 147/255, 1)
    hint_text_color_focus: 144/255, 149/255, 251/255, 1
    hint_text:  "Создайте новую задачу"
    text_color_normal: (148/255, 147/255, 147/255, 1)
    text_color_focus: (148/255, 147/255, 147/255, 1)
    background_color: (0, 0, 0, 0)

    size_hint: (1, 1)





<TaskLayout>
    text_color: 'black'
	canvas.before:
		Color:
			rgba: (1, 1, 1, 1)
		RoundedRectangle:
			pos: self.pos
			size: self.size
<InvLayout>
	canvas.before:
		Color:
			rgba: (153/255,210/255,195/255,0)
		RoundedRectangle:
			pos: self.pos
			size: self.size

<RootLayout>
	canvas.before:
		Color:
			rgba: (239/255,246/255,246/255,1)
		Rectangle:
			pos: self.pos
			size: self.size

<HLine>
	canvas.before:
		Color:
			rgba: (194/255,194/255,194/255,1)
		Rectangle:
			pos: self.pos
			size: self.size


<AddButton>
    background_color: 0,0,0,0
    Image:
        source: "./add.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y


<TaskCont>
    text_color: 'black'
	canvas.before:
		Color:
			rgba: (166/255, 206/255, 211/255, 1)
		RoundedRectangle:
			pos: [self.pos[0]+7, self.pos[1]-12]
			size: [self.size[0]-15, self.size[1]+4]


<CloseAddTaskMenu>
    background_color: 0,0,0,0
    canvas.before:
		Color:
			rgba: (194/255,194/255,194/255,0.5)
		Rectangle:
			pos: self.pos
			size: self.size


